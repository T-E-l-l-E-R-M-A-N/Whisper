<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:Whisper.Frontend.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Whisper.Frontend.Avalonia.Views.MainView">

 <DockPanel LastChildFill="True">
     <Border DockPanel.Dock="Top" Height="54">
         <!--<TextBlock Text="{Binding CurrentPageViewModel.Header}" 
                    Margin="110,0"
                    VerticalAlignment="Center"/>-->
     </Border>
     <ContentControl Content="{Binding CurrentPageViewModel}">
         <ContentControl.ContentTemplate>
             <avalonia:ViewLocator/>
         </ContentControl.ContentTemplate>
     </ContentControl>
 </DockPanel>
</UserControl>
